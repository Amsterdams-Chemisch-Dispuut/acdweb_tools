/**
 * Implements hook_webform_submission_insert().
 */
function acdweb_tools_webform_submission_insert(WebformSubmissionInterface $webform_submission) {
  // 1. Check if this is the correct webform
  if ($webform_submission->getWebform()->id() !== 'declaratieformulier') {
    return;
  }

  // 2. Get the submission data
  $data = $webform_submission->getData();

  // 3. CHECKBOX CHECK: Only proceed if 'store_iban' is checked (truthy)
  if (empty($data['store_iban'])) {
    return;
  }

  // 4. Get the values from the form
  $new_iban = isset($data['iban']) ? $data['iban'] : NULL;
  $new_holder = isset($data['rekeninghouder']) ? $data['rekeninghouder'] : NULL;

  // 5. Update the User Profile
  $uid = \Drupal::currentUser()->id();
  
  // Ensure the user is logged in (uid > 0)
  if ($uid > 0) {
    $user = User::load($uid);
    $save_needed = FALSE;

    // --- Update IBAN ---
    if ($new_iban && $user->hasField('field_iban')) {
      // Only update if value is different
      if ($user->get('field_iban')->value !== $new_iban) {
        $user->set('field_iban', $new_iban);
        $save_needed = TRUE;
      }
    }

    // --- Update Rekeninghouder ---
    if ($new_holder && $user->hasField('field_rekeninghouder')) {
      // Only update if value is different
      if ($user->get('field_rekeninghouder')->value !== $new_holder) {
        $user->set('field_rekeninghouder', $new_holder);
        $save_needed = TRUE;
      }
    }

    // --- Save User Entity ---
    if ($save_needed) {
      $user->save();
    }
  }
}

/**
 * Implements hook_user_insert().
 * Triggers when a user is created (e.g., via Feeds).
 */
function acdweb_tools_user_insert(UserInterface $account) {
  // Optional: Only queue if the user was created by an admin or feed (not self-registration).
  // Checks if the account is active and not blocked.
  if ($account->isActive()) {
    // 1. Get the queue.
    /** @var QueueFactory $queue_factory */
    $queue_factory = \Drupal::service('queue');
    $queue = $queue_factory->get('acd_user_import_emails');

    // 2. Add user ID to the queue for later processing.
    $queue->createItem($account->id());
  }
}

/**
 * Implements hook_cron().
 * Processes the queued emails in the background.
 */
function acdweb_tools_cron() {
  // 1. Get the queue.
  $queue_factory = \Drupal::service('queue');
  $queue = $queue_factory->get('acd_user_import_emails');
  $user_storage = \Drupal::entityTypeManager()->getStorage('user');

  // 2. Process a batch of items (e.g., 50 emails per cron run to prevent timeout).
  // Increase '50' if your server is powerful, decrease if it times out.
  $limit = 50;
  $count = 0;

  while ($count < $limit && ($item = $queue->claimItem())) {
    try {
      // Load the user by ID.
      $account = $user_storage->load($item->data);

      if ($account instanceof UserInterface) {
        // 3. Send the email using the "register_admin_created" template.
        // This function automatically respects your language/translation settings.
        _user_mail_notify('register_admin_created', $account);
      }

      // 4. Remove from queue on success.
      $queue->deleteItem($item);
    }
    catch (\Exception $e) {
      // Log error but release item to try again later (or delete if permanent error).
      \Drupal::logger('acd_custom')->error('Failed to send email to UID @uid: @message', [
        '@uid' => $item->data,
        '@message' => $e->getMessage(),
      ]);
      // Release the item immediately so it can be retried next cron (optional).
      // $queue->releaseItem($item); 
    }
    
    $count++;
  }
}

/**
 * Implements hook_entity_insert().
 */
function acdweb_tools_entity_insert(EntityInterface $entity) {
  if ($entity->getEntityTypeId() !== 'node' || $entity->bundle() !== 'to_do') {
    return;
  }

  if (!$entity->hasField('field_assignee') || $entity->get('field_assignee')->isEmpty()) {
    return;
  }

  $renderer = \Drupal::service('renderer');

  // -- 1. Get the Author (Assigner) Name --
  $assigner_name = $entity->getOwner()->getDisplayName();

  // -- 2. Collect ALL Assignee Names first --
  $assignee_names = [];
  foreach ($entity->get('field_assignee') as $item) {
    if ($item->entity instanceof UserInterface) {
      $assignee_names[] = $item->entity->getDisplayName();
    }
  }
  $all_assignees_string = implode(', ', $assignee_names);

  // -- Process Body --
  // IMPROVEMENT: Used MailFormatHelper to preserve line breaks/paragraphs.
  $body_text = '';
  if ($entity->hasField('body') && !$entity->get('body')->isEmpty()) {
    $body_render = $entity->get('body')->view(['label' => 'hidden']);
    $html = $renderer->renderPlain($body_render);
    $body_text = MailFormatHelper::htmlToText($html);
  }

  // -- Process Priority --
  $priority_text = 'Normal';
  if ($entity->hasField('field_priority') && !$entity->get('field_priority')->isEmpty()) {
    $priority_render = $entity->get('field_priority')->view(['label' => 'hidden']);
    $priority_text = trim(strip_tags($renderer->renderPlain($priority_render)));
  }

  $mailManager = \Drupal::service('plugin.manager.mail');
  $module = 'acdweb_tools';
  $key = 'todo_assigned';
  $send = true;

  // -- Loop to send the emails --
  foreach ($entity->get('field_assignee') as $item) {
    $account = $item->entity;

    if ($account instanceof UserInterface && !$account->isBlocked()) {
      $to = $account->getEmail();
      $langcode = $account->getPreferredLangcode();

      $params = [
        'node_title'    => $entity->label(),
        'node_url'      => $entity->toUrl('canonical', ['absolute' => TRUE])->toString(),
        'assignee_name' => $account->getDisplayName(),
        'assigner_name' => $assigner_name,
        'all_assignees' => $all_assignees_string,
        'body_content'  => $body_text,
        'priority'      => $priority_text,
      ];

      $mailManager->mail($module, $key, $to, $langcode, $params, NULL, $send);
    }
  }
}

/**
 * Implements hook_mail().
 */
function acdweb_tools_mail($key, &$message, $params) {
  $options = ['langcode' => $message['langcode']];

  switch ($key) {
    case 'todo_assigned':
      $message['from'] = \Drupal::config('system.site')->get('mail');
      
      $message['subject'] = t('[@priority] New Task: @title', [
        '@priority' => $params['priority'],
        '@title' => $params['node_title']
      ], $options);

      $body_template = <<<EOD
Hi @name,

Je hebt een nieuwe to-do ontvangen van @assigner_name.

Taak: @title
Prioriteit: @priority
Toegewezen aan: @all_assignees

Beschrijving:
@body_content

Zie alle details hier: @url

Groetjes,
de Website
EOD;

      $message['body'][] = t($body_template, [
        '@name'          => $params['assignee_name'],
        '@assigner_name' => $params['assigner_name'],
        '@title'         => $params['node_title'],
        '@priority'      => $params['priority'],
        '@all_assignees' => $params['all_assignees'],
        '@body_content'  => $params['body_content'],
        '@url'           => $params['node_url'],
      ], $options);
      break;
  }
}
