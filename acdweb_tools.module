<?php

use Drupal\Core\Entity\EntityInterface;
use Drupal\user\UserInterface;
use Drupal\Core\Entity\Display\EntityViewDisplayInterface;
use Drupal\Core\Url;
use Symfony\Component\HttpFoundation\RedirectResponse;

/**
 * Implements hook_entity_insert().
 */
function acdweb_tools_entity_insert(EntityInterface $entity) {
  if ($entity->getEntityTypeId() !== 'node' || $entity->bundle() !== 'to_do') {
    return;
  }

  if (!$entity->hasField('field_assignee') || $entity->get('field_assignee')->isEmpty()) {
    return;
  }

  $renderer = \Drupal::service('renderer');

  // -- 1. Get the Author (Assigner) Name --
  $assigner_name = $entity->getOwner()->getDisplayName();

  // -- 2. Collect ALL Assignee Names first --
  $assignee_names = [];
  foreach ($entity->get('field_assignee') as $item) {
    if ($item->entity instanceof UserInterface) {
      $assignee_names[] = $item->entity->getDisplayName();
    }
  }
  // Create a comma-separated string (e.g., "John Doe, Jane Smith")
  $all_assignees_string = implode(', ', $assignee_names);

  // -- Process Body --
  $body_text = '';
  if ($entity->hasField('body') && !$entity->get('body')->isEmpty()) {
    $body_render = $entity->get('body')->view(['label' => 'hidden']);
    $body_text = trim(strip_tags($renderer->renderPlain($body_render)));
  }

  // -- Process Priority --
  $priority_text = 'Normal';
  if ($entity->hasField('field_priority') && !$entity->get('field_priority')->isEmpty()) {
    $priority_render = $entity->get('field_priority')->view(['label' => 'hidden']);
    $priority_text = trim(strip_tags($renderer->renderPlain($priority_render)));
  }

  $mailManager = \Drupal::service('plugin.manager.mail');
  $module = 'acdweb_tools';
  $key = 'todo_assigned';
  $send = true;

  // -- Loop again to send the emails --
  foreach ($entity->get('field_assignee') as $item) {
    $account = $item->entity;

    if ($account instanceof UserInterface && !$account->isBlocked()) {
      $to = $account->getEmail();
      $langcode = $account->getPreferredLangcode();

      $params = [
        'node_title'    => $entity->label(),
        'node_url'      => $entity->toUrl('canonical', ['absolute' => TRUE])->toString(),
        'assignee_name' => $account->getDisplayName(),
        'assigner_name' => $assigner_name,
        'all_assignees' => $all_assignees_string, // <--- Added here
        'body_content'  => $body_text,
        'priority'      => $priority_text,
      ];

      $mailManager->mail($module, $key, $to, $langcode, $params, NULL, $send);
    }
  }
}

/**
 * Implements hook_mail().
 */
function acdweb_tools_mail($key, &$message, $params) {
  $options = ['langcode' => $message['langcode']];

  switch ($key) {
    case 'todo_assigned':
      $message['from'] = \Drupal::config('system.site')->get('mail');
      
      $message['subject'] = t('[@priority] New Task: @title', [
        '@priority' => $params['priority'],
        '@title' => $params['node_title']
      ], $options);

      $body_template = <<<EOD
Hi @name,

Je hebt een nieuwe to-do op de website van @assigner_name.

Taak: @title
Prioriteit: @priority
Toegewezen aan: @all_assignees

Beschrijving:
@body_content

Zie alle details hier: @url

Groetjes,
de Website
EOD;

      // Pass the template to t() for translation and safe replacement
      $message['body'][] = t($body_template, [
        '@name'          => $params['assignee_name'],
        '@assigner_name' => $params['assigner_name'], // Note: You missed this in your original array
        '@title'         => $params['node_title'],
        '@priority'      => $params['priority'],
        '@all_assignees' => $params['all_assignees'], // <--- Added here
        '@body_content'  => $params['body_content'],
        '@url'           => $params['node_url'],
      ], $options);
      break;
  }
}

/**
 * Implements hook_entity_view().
 *
 * Logic derived from ECA process: process_epdze5j (Mark done button).
 */
function acdweb_tools_entity_view(array &$build, EntityInterface $entity, EntityViewDisplayInterface $display, $view_mode) {
  // 1. Check if this is a 'to_do' node and we are in 'full' view mode.
  // We use full view to prevent this triggering on teasers/lists.
  if ($entity->getEntityTypeId() !== 'node' || $entity->bundle() !== 'to_do' || $view_mode !== 'full') {
    return;
  }

  // 2. Check for the query parameter '?op=mark_done'.
  // This matches the ECA condition: [current-page:query:op] equals mark_done.
  $request = \Drupal::request();
  $op = $request->query->get('op');

  if ($op === 'mark_done') {
    
    // 3. Set field_status to true (1) and save.
    // Matches ECA action: Set field value '1' to 'field_status'.
    if ($entity->hasField('field_status') && $entity->get('field_status')->value != 1) {
      $entity->set('field_status', TRUE);
      $entity->save();
      
      // Optional: Add a message so the user knows it happened.
      \Drupal::messenger()->addStatus(t('Task marked as done.'));
    }

    // 4. Redirect to the clean URL (removes the ?op=mark_done parameter).
    // Matches ECA action: Form state set redirect.
    $url = $entity->toUrl('canonical', ['absolute' => TRUE])->toString();
    $response = new RedirectResponse($url);
    $response->send();
    exit;
  }
}